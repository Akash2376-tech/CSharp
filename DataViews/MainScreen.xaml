<UserControl x:Class="DataViews.MainScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ViewModels;assembly=ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:MainScreenViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button Content="Click" HorizontalAlignment="Left" Margin="123,312,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="{Binding Text}" HorizontalAlignment="Left" Margin="415,272,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.882,-0.803"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="123,193,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
